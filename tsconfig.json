{
  "compilerOptions": {
    "outDir": "lib",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "lib"]
}
